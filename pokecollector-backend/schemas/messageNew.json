{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "New Message",
    "description": "A new message related to a specific trade",
    "properties": {
        "tradeId": {
            "description": "Trade ID",
            "type": "integer"
        },
        "username": {
            "description": "Username of messenger",
            "type": "string",
            "minLength": 3,
            "maxLength": 30
        },
        "message": {
            "description": "Message from user",
            "type": "string",
            "minLength": 1,
            "maxLength": 280
        }
    },
    "additionalProperties": false,
    "required": [
        "tradeId",
        "username",
        "message"
    ]
}